<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zlkj.visitor.dao.TRzglDao">

		<!-- 添加 -->
	<insert id="addrz" parameterType="TRzgl">
		insert into entryinfo.t_rzgl
		<trim suffix=")" prefix="(" suffixOverrides=",">
			<if test="yhm !=null">
				yhm,
			</if>
			<if test="cznr !=null" >
				cznr,
			</if>
			<if test="czsj !=null" >
				czsj,
			</if>
			<if test="czip !=null" >
				czip,
			</if>
			<if test="czbz !=null" >
				czbz,
			</if>
		</trim>
		<trim suffix=")" prefix=" values (" suffixOverrides=",">
			<if test="yhm !=null">
				#{yhm},
			</if>
			<if test="cznr !=null" >
				#{cznr},
			</if>
			<if test="czsj !=null" >
				#{czsj},
			</if>
			<if test="czip !=null" >
				#{czip},
			</if>
			<if test="czbz !=null" >
				#{czbz},
			</if>
		</trim>
	</insert>
	<!-- 添加 end -->

	<!-- 分页查询 -->
	<select id="findAllFy" resultType="TRzgl"
		parameterType="com.zlkj.visitor.dto.PulicCxtj">
		select * from entryinfo.t_rzgl
		<where>
			<if test="bh!=null and bh!=''">
				cznr like #{bh}
			</if>
			<if test="ppms!=null and ppms!=''">
				and  
	            <foreach collection="ppms" item="ppms" index="index"
                  open="(" close=")" separator="or">
                  yhm like #{ppms}
                </foreach>
			</if>
			<if test="kssj!=null and kssj !='' and jssj!=null and jssj!='' ">
				and czsj >=#{kssj} 
				and czsj <![CDATA[<=]]>#{jssj}
			</if>
		</where>
		order by rzid desc
		limit #{page},#{rows}
	</select>
	<!-- 分页查询总数 -->
	<select id="findAllFyCount" resultType="long"
		parameterType="com.zlkj.visitor.dto.PulicCxtj">
		select count(*) from entryinfo.t_rzgl
		<where>
			<if test="bh!=null and bh!=''">
				cznr like #{bh}
			</if>
			<if test="ppms!=null and ppms!=''">
				and  
	            <foreach collection="ppms" item="ppms" index="index"
                  open="(" close=")" separator="or">
                  yhm like #{ppms}
                </foreach>
			</if>
			<if test="kssj!=null and kssj !='' and jssj!=null and jssj!='' ">
				and czsj >=#{kssj} 
				and czsj <![CDATA[<=]]>#{jssj}
			</if>
		</where>
	</select>	
	<!-- 查询最新三条数据 -->
	<select id="findMax3s" resultType="TRzgl">
		select * from entryinfo.t_rzgl
		order by rzid desc
		limit 0,3
	</select>
	
	
</mapper>

